{
  "manifest_version": 2,
  "name": "Web Craft",
  "version": "0.1",
  "permissions": [ "storage" ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "text_area.js",
        "storage.js",
        "bookmark.js",
        "selection.js",
        "capture.js",
        "Character.js",

        "documentListener.js",
        "onOff.js",
        "insertButton.js",

        "library/es6-promise.min.js",
        "library/html2canvas.min.js"
      ],
      "css": ["decorating.css"]
    }
  ],
  "browser_action": {
  "default_icon": "webcraft_icon.png"
}
}
